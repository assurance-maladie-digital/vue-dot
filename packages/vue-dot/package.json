{
	"name": "@cnamts/vue-dot",
	"version": "1.6.1",
	"description": "Official CNAM component library",
	"keywords": [
		"vue",
		"vuejs2",
		"vue-cli",
		"component-library",
		"cnam",
		"vue-dot"
	],
	"homepage": "https://github.com/assurance-maladie-digital/vue-dot/blob/master/README.md",
	"bugs": {
		"url": "https://github.com/assurance-maladie-digital/vue-dot/issues",
		"email": "contact@deraw.dev"
	},
	"license": "MIT",
	"author": "Dylan Broussard <contact@deraw.dev>",
	"files": [
		"dist/*",
		"src/*",
		"public/*",
		"types/*"
	],
	"main": "./dist/vue-dot.umd.js",
	"browser": "./dist/vue-dot.common.js",
	"unpkg": "./dist/vue-dot.umd.min.js",
	"jsDelivr": "./dist/vue-dot.umd.min.js",
	"types": "./types/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/assurance-maladie-digital/vue-dot"
	},
	"devDependencies": {
		"@babel/core": "^7.3.4",
		"@babel/polyfill": "^7.2.5",
		"@typescript-eslint/parser": "^1.4.2",
		"@vue/cli-plugin-babel": "^3.5.1",
		"@vue/cli-plugin-e2e-nightwatch": "^3.5.1",
		"@vue/cli-plugin-eslint": "^3.5.1",
		"@vue/cli-plugin-typescript": "^3.5.1",
		"@vue/cli-plugin-unit-jest": "^3.5.1",
		"@vue/cli-service": "^3.5.1",
		"@vue/eslint-config-standard": "^4.0.0",
		"@vue/eslint-config-typescript": "^4.0.0",
		"@vue/test-utils": "^1.0.0-beta.29",
		"babel-core": "7.0.0-bridge.0",
		"babel-plugin-transform-imports": "^1.5.1",
		"babel-polyfill": "^6.26.0",
		"css-loader": "^2.1.1",
		"dayjs": "^1.8.10",
		"eslint": "^5.15.1",
		"eslint-plugin-vue": "^5.2.2",
		"html-webpack-plugin": "^3.2.0",
		"jest": "24.5.0",
		"languages": "^0.1.3",
		"lint-staged": "^8.1.5",
		"node-sass": "^4.11.0",
		"raw-loader": "^1.0.0",
		"sass-loader": "^7.1.0",
		"style-loader": "^0.23.1",
		"stylus": "^0.54.5",
		"stylus-loader": "^3.0.2",
		"ts-jest": "^23.10.5",
		"ts-node": "^8.0.3",
		"typescript": "~3.2.1",
		"vue": "^2.6.9",
		"vue-server-renderer": "^2.6.9",
		"vue-template-compiler": "^2.6.9",
		"vuetify": "^1.5.6",
		"vuetify-loader": "^1.2.1",
		"webpack": "^4.29.5",
		"webpack-bundle-analyzer": "^3.1.0",
		"webpack-node-externals": "^1.7.2"
	},
	"scripts": {
		"demo:serve": "vue-cli-service serve ./demo/main --mode demo",
		"demo:build": "vue-cli-service build ./demo/main --mode demo",
		"lib:build": "vue-cli-service build --target lib --name vue-dot ./src/index.ts",
		"lib:lint": "vue-cli-service lint",
		"lib:test:unit": "vue-cli-service test:unit",
		"lib:test:e2e": "vue-cli-service test:e2e"
	},
	"peerDependencies": {
		"dayjs": "^1.7.7",
		"languages": "^0.1.3",
		"vue": "^2.5.2",
		"vuetify": "^1.3.0"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 8"
	],
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"vue"
		],
		"transform": {
			"^.+\\.vue$": "vue-jest",
			".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
			"^.+\\.tsx?$": "ts-jest"
		},
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1",
			"^vue$": "<rootDir>/node_modules/vue/dist/vue.common.js"
		},
		"snapshotSerializers": [
			"jest-serializer-vue"
		],
		"testMatch": [
			"<rootDir>/(tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx))"
		],
		"coverageReporters": [
			"json",
			"lcov",
			"text",
			"html",
			"text-summary"
		],
		"coverageDirectory": "<rootDir>/tests/unit/coverage",
		"collectCoverage": true,
		"collectCoverageFrom": [
			"**/*.{ts,vue}",
			"!**/node_modules/**",
			"!**/*.d.ts",
			"!**/docs/**",
			"!**/scripts/**",
			"!**/demo/**"
		],
		"testURL": "http://localhost/",
		"transformIgnorePatterns": [
			"./node_modules/vuetify"
		]
	},
	"remarkConfig": {
		"plugins": [
			"remark-preset-lint-recommended"
		]
	},
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.ts": [
			"vue-cli-service lint",
			"git add"
		],
		"*.vue": [
			"vue-cli-service lint",
			"git add"
		]
	},
	"vuePlugins": {
		"ui": [
			"./vue-cli-plugin-vue-dot-internal/ui.js"
		]
	}
}
