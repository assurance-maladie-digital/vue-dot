{
	"name": "@cnamts/vue-dot",
	"version": "1.1.1",
	"scripts": {
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"build-bundle": "vue-cli-service build --target lib --name vue-dot ./src/components/index.ts",
		"lint": "vue-cli-service lint",
		"test:unit": "vue-cli-service test:unit",
		"test:e2e": "vue-cli-service test:e2e"
	},
	"main": "./dist/vue-dot.common.js",
	"files": [
		"dist/*",
		"src/*",
		"public/*",
		"*.json",
		"*.js"
	],
	"dependencies": {
		"vue": "^2.5.17",
		"vuetify": "^1.2.3"
	},
	"devDependencies": {
		"@babel/polyfill": "^7.0.0-rc.4",
		"@types/jest": "^23.3.2",
		"@vue/cli-plugin-babel": "^3.0.1",
		"@vue/cli-plugin-e2e-nightwatch": "^3.0.1",
		"@vue/cli-plugin-typescript": "^3.0.1",
		"@vue/cli-plugin-unit-jest": "^3.0.1",
		"@vue/cli-service": "^3.0.1",
		"@vue/eslint-config-standard": "^3.0.3",
		"@vue/eslint-config-typescript": "^3.0.3",
		"@vue/test-utils": "^1.0.0-beta.25",
		"babel-core": "7.0.0-bridge.0",
		"babel-plugin-transform-imports": "^1.5.1",
		"lint-staged": "^7.2.2",
		"node-sass": "^4.9.3",
		"sass-loader": "^7.0.1",
		"stylus": "^0.54.5",
		"stylus-loader": "^3.0.2",
		"ts-jest": "^23.1.4",
		"typescript": "^3.0.3",
		"vue-cli-plugin-vuetify": "^0.1.6",
		"vue-template-compiler": "^2.5.17"
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 8"
	],
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"vue"
		],
		"transform": {
			"^.+\\.vue$": "vue-jest",
			".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
			"^.+\\.tsx?$": "ts-jest"
		},
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1"
		},
		"snapshotSerializers": [
			"jest-serializer-vue"
		],
		"testMatch": [
			"<rootDir>/(tests/unit/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx))"
		],
		"coverageReporters": [
			"json",
			"lcov",
			"text",
			"html",
			"text-summary"
		],
		"coverageDirectory": "<rootDir>/tests/unit/coverage",
		"collectCoverage": true,
		"collectCoverageFrom": [
			"**/*.{ts,vue}",
			"!**/node_modules/**",
			"!**/*.d.ts",
			"!**/router.ts"
		]
	},
	"author": "Dylan Broussard <deraw@outlook.fr>",
	"description": "Official CNAMTS component library",
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.ts": [
			"vue-cli-service lint",
			"git add"
		],
		"*.vue": [
			"vue-cli-service lint",
			"git add"
		]
	}
}
